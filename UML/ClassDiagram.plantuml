@startuml ChessBoard
skinparam groupInheritance 2
class ChessBoard {
    + create()
    + addSquareToRow()
    + changeSquareColor()
}
class ChessPiece {
    + id
    + name 
    + url 
    + setPiece() 
    + isChosen() 
    + isNotChosen()
    + isEmpty()
    + recommendMoves() 
}
class Pawn {
    + recommendMovesForPawn()
}
class Knight {
    + recommendMovesForKnight()
}
class Rook {
    + recommendMovesForRook()
}
class Bishop {
    + recommendMovesForBishop()
}
class Queen {
    + recommendMovesForQueen()
}
class King {
    + recommendMovesForKing()
}

ChessBoard <-- ChessPiece
ChessBoard <-- Controller
ChessPiece <|-- Pawn 
ChessPiece <|-- Rook 
ChessPiece <|-- Knight 
ChessPiece <|-- Bishop 
ChessPiece <|-- Queen  
ChessPiece <|-- King 
@enduml